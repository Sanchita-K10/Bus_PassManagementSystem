<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:src="@drawable/banner3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#088F8F" />

    <TextView

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30dp"
        android:text="Seamless Journeys, Effortless Passes"
        android:textColor="#F6E019"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<TextView
    android:layout_marginTop="30dp"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="BOOK PASS"
        android:textSize="22dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:cardBackgroundColor="#088F8F"
        app:cardCornerRadius="20dp"

        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:background="#efefef"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <ImageView
                android:src="@drawable/pass_icon"
                android:layout_width="80dp"
                android:layout_height="60dp"/>

            <Button
                android:backgroundTint="@color/colorPrimary"
                android:onClick="SCPassBtn"
                android:text="Senior Citizon Pass"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

            <LinearLayout
                android:background="#efefef"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="160dp"
                android:layout_height="160dp">

                <ImageView
                    android:src="@drawable/pass_icon"
                    android:layout_width="80dp"
                    android:layout_height="60dp"/>

                <Button
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="studentPassBtn"
                    android:text="Student Pass"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>