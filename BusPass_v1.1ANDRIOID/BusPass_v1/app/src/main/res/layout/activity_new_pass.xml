<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#C1F8F8"
tools:context=".activities.NewPassActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="#088F8F"
        android:src="@drawable/ic_login_bk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
</LinearLayout>
<TextView
    android:text="Book New Pass"
    android:textColor="@color/white"
    android:textSize="24dp"
    android:layout_gravity="center"
    android:layout_marginTop="-120dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
</LinearLayout>

<ImageView
    android:src="@color/cardview_shadow_end_color"
    android:layout_width="match_parent"
    android:layout_marginTop="-90dp"
    android:layout_height="180dp"/>

<androidx.cardview.widget.CardView
    android:background="@color/black"
    android:layout_gravity="center"

    android:layout_marginTop="-70dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"

    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editPassType"
            android:inputType="number"
            android:hint="Enter Pass Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editSrc"
            android:layout_marginTop="5dp"
            android:hint="Enter Source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/editDest"
            android:inputType="number"
            android:hint="Enter Destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/editDuration"
            android:hint="Enter Duration of Months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/editIssueDate"
            android:inputType="date"
            android:hint="Enter Issue Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <Button
            android:onClick="verifyBtn"
            android:text="Verify and Pay"
            android:padding="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>